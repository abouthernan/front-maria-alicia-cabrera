---
import { ToggleMenu } from "./ToggleMenu";
---

<header class="header">
  <a href="/" class="logo">María Alicia</a>
  <nav class="nav">
    <a class="nav__link" href="/">Inicio</a>
    <a class="nav__link" href="/#sobre-mi">Sobre mí</a>
    <a class="nav__link" href="/#galeria">Galería</a>
    <a class="nav__link" href="/biblioteca">Biblioteca</a>
    <a class="nav__link" href="/articulos">Artículos</a>
    <a class="nav__link" href="/columnas">Columnas</a>
  </nav>
  <ToggleMenu client:load />
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
    height: var(--header);
    z-index: 10;
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    right: 0;
    max-width: 120rem;
    margin: 0 auto;
  }

  .logo {
    text-decoration: none;
    text-transform: uppercase;
    font-family: var(--font-title);
    font-size: var(--font-sm);
  }

  .nav {
    position: absolute;
    width: 100%;
    height: 100vh;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    row-gap: 2rem;
    font-family: var(--font-body);
    font-size: var(--font-sm);
    background: var(--white);
    transform: translateY(-100%);
    transition: transform 0.3s ease-in-out;
    z-index: -1;
  }

  .nav__link {
    text-decoration: none;
    color: var(--color-text);
  }

  :global(:has(.burger.active)) .nav {
    transform: translateY(0);
  }

  :global(.burger) {
    background: none;
    border: none;
    cursor: pointer;
    outline: none;
    padding: 0;
    margin: 0;
    font-size: var(--font-md);
  }

  @media (min-width: 768px) {
    :global(.burger) {
      display: none;
    }

    .nav {
      position: static;
      width: auto;
      height: auto;
      display: flex;
      flex-direction: row;
      column-gap: 1.5rem;
      align-items: center;
      background: none;
      transform: translateY(0);
    }

    .nav__link {
      color: var(--black);
      font-size: var(--font-normal);
      transition: opacity .3s ease-in-out;
    }

    .nav__link:hover {
      opacity: 0.5;
    }
  }

</style>
