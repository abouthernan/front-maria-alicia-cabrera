---
import { GallerySwiper } from "./GallerySwiper"
const response = await fetch(`${import.meta.env.PUBLIC_API_URL}/api/articulos?populate=image`)
const { data } = await response.json()
---

<section class="section container" id="galeria">
  <h2 class="title">Galer√≠a</h2>
  <GallerySwiper client:load data={data} />
</section>

<style>
  section {
    padding: 4rem 1rem;
  }

  .title {
    font-size: var(--font-xxl);
  }

  :global(.gallerySwiper) {
    width: 100%;
    max-width: 120rem;
    margin-bottom: 2rem;
  }

  :global(.gallerySwiper .swiper-slide) {
    max-width: 30rem;
  }

  :global(.gallerySwiper .gallery__content-img) {
    width: 30rem;
    height: 30rem;
  }


  :global(.gallerySwiper .gallery__content-img .gallery__img) {
    width: 100%;
    height: 100%;
    aspect-ratio: 1/1;
    object-fit: cover;
    object-position: center;
  }

  :global(.gallerySwiper .gallery__date) {
    font-size: var(--font-sm);
    font-family: var(--font-coursive);
    color: var(--green);
    display: inline-block;
    width: 100%;
    min-width: 25rem;
    font-weight: 500;
    margin-top: 1rem;
  }

  :global(.gallerySwiper .gallery__card-title) {
    display: block;
    width: 100%;
    min-width: 30rem;
    padding-bottom: 2rem;
  }

  :global(.gallerySwiper .swiper-button-prev),
  :global(.gallerySwiper .swiper-button-next) {
    color: var(--green);
    display: none;
  }

  :global(.gallerySwiper .swiper-pagination-bullet) {
    background: var(--green);
  }

  @media (min-width: 768px) {
    :global(.gallerySwiper .swiper-button-prev),
    :global(.gallerySwiper .swiper-button-next) {
      display: block;
    }

    :global(.gallerySwiper) {
      margin-bottom: 4rem;
    }
  }

</style>
