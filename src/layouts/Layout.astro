---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Cinzel&family=Cormorant+Garamond:wght@300&family=Open+Sans&display=swap');

  html {
    box-sizing: border-box;
    font-size: 62.5%;
    scroll-behavior: smooth;
  }

  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  :root {
    /* font family */
    --font-title: 'Cinzel', serif;
    --font-coursive: 'Cormorant Garamond', serif;
    --font-body: 'Open Sans', sans-serif;
    /* font sizes */
    --font-xxl: 3rem;
    --font-xl: 4.5rem;
    --font-lg: 3.5rem;
    --font-md: 2.8rem;
    --font-sm: 2.4rem;
    --font-normal: 1.9rem;
    --font-xs: 1.1rem;
    /* colours */
    --black: #000000;
    --cream: #dfdccf;
    --white: #ffffff;
    --grey: #a6a6a6;
    --header: 60px;
  }

  body {
    font-size: 1.6rem;
    padding: 0;
    margin: 0;
  }

  h1,h2,h3,h4,h5,h6 {
    font-family: var(--font-title);
    font-weight: 400;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  img {
    max-width: 100%;
  }

  .container {
    max-width: 120rem;
    margin: 0 auto;
    padding: 0 2rem;
  }

</style>
